@page "/Tilføj_Lokaler"
@using Core.Models
@using ClientApp.Service

<h3>Tilføj_Lokaler</h3>

<EditForm Model="@lokale" OnValidSubmit="@HandleSubmit" class="row p-3">
    <DataAnnotationsValidator />
    <ValidationSummary />
    
    <div class="col-md-12 mb-3">
        <label for="Name">Lokalenavn</label>
        <InputText id="Name" @bind-Value="lokale.Name" class="form-control" />
    </div>

    
    <div class="col-md-12 mb-3">
        <label for="Name">Lokation</label>
        <InputText id="Name" @bind-Value="lokale.Location" class="form-control" />
    </div>
    
    <div class="col-md-6 mb-3">
        <label for="Price">Bemanding</label>
        <InputText id="Price" @bind-Value="lokale.Bemanding" class="form-control" />
    </div>
    
    <div class="col-md-12 mb-3">
        <label for="Category">Category</label>
        <InputSelect id="Category" @bind-Value="lokale.Type"> 
            @foreach (var cat in åbningstidcategories)
            {
                <option value="@cat">@cat</option>
            }
        </InputSelect>
    </div>
    
    <div class="col-12 mb-3">
        <button type="submit" class="btn btn-primary" >Tilføj Lokale</button>
    </div>
    
    <div class="col-12 mb-3">
        <button type="reset" class="btn btn-primary">Reset</button>
    </div>
    
</EditForm> 


@code {
    [Inject] private ILokaler lokaleService { get; set; }

    Lokale lokale = new();
    
    private List<string> åbningstidcategories = new List<string> { "12:00 - 13:00", "13:00", "red" };

    private async Task HandleSubmit()
    {
        if (lokale != null)
        {
            await lokaleService.Add(lokale);
        }
    }

}